<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celesteClaro">


    <EditText
        android:id="@+id/registrar_nombre"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/morado"
        android:drawableTint="@color/morado"
        android:ems="10"
        android:foregroundTint="@color/morado"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="@color/morado"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <EditText
        android:id="@+id/registrar_apellido"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:textColorHint="#000000"
        android:backgroundTint="@color/morado"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar_nombre"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/registrar_boton"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/boton_login_am"
        android:text="Registrar"
        android:textColor="@drawable/texto_boton_login_am"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmar_contraseña" />

    <EditText
        android:id="@+id/registrar_contraseña"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Contraseña"
        android:backgroundTint="@color/morado"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar_correo"
        app:layout_constraintVertical_bias="0.051" />

    <EditText
        android:id="@+id/registrar_correo"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/morado"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fecha_nacimiento"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/confirmar_contraseña"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Confirmar Contraseña"
        android:backgroundTint="@color/morado"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar_contraseña"
        app:layout_constraintVertical_bias="0.074" />

    <EditText
        android:id="@+id/fecha_nacimiento"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:ems="10"
        android:hint="N°Contacto"
        android:backgroundTint="@color/morado"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar_apellido"
        app:layout_constraintVertical_bias="0.034" />

</androidx.constraintlayout.widget.ConstraintLayout>